<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp" />

            <stroke android:width="1.5px" android:color="#26bfa6" />

            <solid android:color="#26bfa6" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <corners android:bottomRightRadius="5dip" android:topRightRadius="5dip" />

            <stroke android:width="1.5px" android:color="#26bfa6" />

            <solid android:color="#00ffffff" />
        </shape>
    </item>

</selector>