<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popup_bg"
        >

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            >

            <TextView
                android:id="@+id/tx_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="20sp"
                android:text="请选择测量模式"/>

            <View
                style="@style/line_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <CheckBox
                android:id="@+id/measure_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/measure_one"
                android:layout_marginLeft="20dp"
                android:button="@null"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:clickable="false"
                />
            <TextView
                android:id="@+id/tx_2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textColor="#333333"
                android:text="60s连续测量"/>
        </LinearLayout>
            <View
                style="@style/line_style"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <CheckBox
                    android:id="@+id/measure_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/measure_two"
                    android:layout_marginLeft="20dp"
                    android:button="@null"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    />
                <TextView
                    android:id="@+id/tx_3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="3"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:text="连续测量"/>
            </LinearLayout>

            <View
                style="@style/line_style"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/cancel_to_dismiss"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="取消"/>
                <Button
                    android:id="@+id/confirm_to_dismiss"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="确认"/>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>