<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:heartdoc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#eaf7f7fa"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp">

            <RelativeLayout
                android:id="@+id/rl_year"
                android:layout_width="120dp"
                android:layout_height="135dp"
                android:layout_marginLeft="50dp">

                <com.electrocardio.custom.elec.PapersPicker
                    android:id="@+id/year"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    heartdoc:itemNumber="3"
                    heartdoc:lineColor="#b3b3b3"
                    heartdoc:maskHight="45dp"
                    heartdoc:noEmpty="true"
                    heartdoc:normalTextColor="#999999"
                    heartdoc:normalTextSize="20sp"
                    heartdoc:selecredTextColor="#26bfa6"
                    heartdoc:selecredTextSize="24sp"
                    heartdoc:unitHight="45dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="年"
                    android:textColor="#26bfa6"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_month"
                android:layout_width="80dp"
                android:layout_height="135dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="54dp">

                <com.electrocardio.custom.elec.PapersPicker
                    android:id="@+id/month"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    heartdoc:itemNumber="3"
                    heartdoc:lineColor="#b3b3b3"
                    heartdoc:maskHight="45dp"
                    heartdoc:noEmpty="true"
                    heartdoc:normalTextColor="#999999"
                    heartdoc:normalTextSize="20sp"
                    heartdoc:selecredTextColor="#26bfa6"
                    heartdoc:selecredTextSize="24sp"
                    heartdoc:unitHight="45dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="月"
                    android:textColor="#26bfa6"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/rl_content"
            android:layout_marginTop="56dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#b2b2b2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>